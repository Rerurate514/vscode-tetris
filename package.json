{
  "name": "vscode-tetris",
  "displayName": "vscode-tetris",
  "description": "",
  "version": "0.0.1",
  "engines": {
		"vscode": "^1.74.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"type": "webview",
					"id": "vscode-tetris.fieldView",
					"name": "vscode-tetris"
				}
			]
		},
		"commands": [
			{
				"command": "calicoColors.addColor",
				"category": "Calico Colors",
				"title": "Add Color"
			},
			{
				"command": "calicoColors.clearColors",
				"category": "Calico Colors",
				"title": "Clear Colors",
				"icon": "$(clear-all)"
			},
			{
				"command": "vscode-tetris.startGame",
				"category": "vscode-tetris",
				"title": "Game Start"
			},
			{
				"command": "vscode-tetris.finishGame",
				"category": "vscode-tetris",
				"title": "Game Finish"
			},
			{
				"command": "vscode-tetris.pauseGame",
				"category": "vscode-tetris",
				"title": "Game Pause"
			},
			{
				"command": "vscode-tetris.resetGame",
				"category": "vscode-tetris",
				"title": "Game Reset"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "calicoColors.clearColors",
					"group": "navigation",
					"when": "view == calicoColors.colorsView"
				},
				{
					"command": "vscode-tetris.resetGame",
					"group": "navigation",
					"when": "view == vscode-tetris.resetGame"
				}
			]
		}
	},

  "scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
		"@types/vscode": "^1.80.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "20.2.5",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"eslint": "^8.41.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^5.1.3",
		"ts-loader": "^9.4.3",
		"webpack": "^5.85.0",
		"webpack-cli": "^5.1.1",
		"@vscode/test-electron": "^2.3.2"
  }
}